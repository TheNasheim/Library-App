<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ProgramController">
    <children>
        <AnchorPane prefHeight="500.0" prefWidth="700.0" GridPane.rowIndex="1">
         <children>

             <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ffffff00" height="70.0" layoutX="190.0" layoutY="10.0" stroke="BLACK" strokeType="INSIDE" width="405.0" />
             <Rectangle arcHeight="1.0" arcWidth="1.0" fill="#ffffff00" height="60.0" layoutX="195.0" layoutY="15.0" stroke="BLACK" strokeType="INSIDE" width="90.0" />
            <CheckBox fx:id="cbAvailable" layoutX="230.0" layoutY="18.0" mnemonicParsing="false" />
            <Label layoutX="200.0" layoutY="37.0" text="Show available &#10;books only" textAlignment="CENTER" />
            <TextField fx:id="txtSearch" layoutX="295.0" layoutY="40.0" prefHeight="25.0" prefWidth="232.0" />
            <Button layoutX="535.0" layoutY="40.0" mnemonicParsing="false" onMouseClicked="#onSearch_Click" text="Search" />
            <Button layoutX="603.0" layoutY="15.0" mnemonicParsing="false" onMouseClicked="#onMyBorrowedBooks_Click" text="Show &#10;my borrowed&#10; books" prefWidth="92.0" textAlignment="CENTER" />

            <TableView fx:id="tvListofObjects" layoutX="14.0" layoutY="85.0" onMouseClicked="#tvListofObjects_Click" prefHeight="390.0" prefWidth="580.0" />
            <Button fx:id="btnRead" layoutX="603.0" layoutY="110.0" mnemonicParsing="false" onMouseClicked="#onReadMore_Click" prefHeight="40.0" prefWidth="92.0" text="  Read more &#10;   Info" textAlignment="CENTER" />
            <Button fx:id="btnBorrow" layoutX="603.0" layoutY="435.0" mnemonicParsing="false" onMouseClicked="#onBorrow_Click" prefHeight="25.0" prefWidth="92.0" text="Borrow Book" />
            <Button fx:id="btnReturn" layoutX="603.0" layoutY="465.0" mnemonicParsing="false" onMouseClicked="#onReturn_Click" prefHeight="25.0" prefWidth="92.0" text="Return Book" />
            <Label fx:id="lblStatus" layoutX="14.0" layoutY="478.0" text="Status:">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
        </AnchorPane>

    </children>
    <columnConstraints>
        <ColumnConstraints />
      <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
      <RowConstraints />
      <RowConstraints />
    </rowConstraints>
</GridPane>
